<div id="overviews" class="section wb">
    <div class="container">
        <div class="row"> 
            <div class="col-lg-12 blog-post-single">					
                <div class="blog-author">
                    <div class="author-bio">
                        <h3 class="author_name">Courses Enrolled by <%= user.name %> </h3>
                    </div>
                </div>
                
            </div><!-- end col -->
        </div><!-- end row -->
        <br>
        <% if (success_message != undefined || validation_errors != undefined) { %>
            <%- include('_mesaj.ejs') %> 
        <% } %>
        <div class="row mt-3"> 
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col">Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                 <% users.forEach(user => { %>
                      <tr>
                        <td><%= user._id %> </td>
                        <td><%= user.name %> </td>
                        <td><%= user.email %> </td>
                        <td><%= user.role %> </td>
                        <td><a href="/users/<%= user._id %>?_method=DELETE" class="btn btn-lg btn-danger text-white float-right" onclick="return confirm('Are You Sure?')"><span>DELETE</span></a></td>
                      </tr>
                 <% }) %>
                    </tbody>
                </table>
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->